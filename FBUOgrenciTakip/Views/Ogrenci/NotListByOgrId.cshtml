@model List<DataAccessLayer.Entities.Not>


<div class="col-md-12">
    @{ int rowNum = 1;}
    @foreach (var nt in Model)
    {
        <div class="row">
            <div class="col-md-2">
                @rowNum -
                <a href="/Ogrenci/NotEdit/@nt.Id/@nt.OgrId" class="bi bi-pen"></a>
                <a href="/Ogrenci/NotDelete/@nt.Id/@nt.OgrId" class="bi bi-trash"></a>

            </div>
            <div class="col-md-8">
                @nt.Text
            </div>

        </div>
        rowNum++;
    }
</div>